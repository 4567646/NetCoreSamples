@using NetCoreDemo.Core.Enums
@model IEnumerable<NetCoreDemo.Core.Domain.Sys.Sys_Permission>
<aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/img/avatar.png" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>Alexander Pierce</p>
                <!-- Status -->
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header"><span class="fa-lg">菜单导航</span></li>
            <!-- Optionally, you can add icons to the links -->
            @{
                var parentList = Model.ToList().FindAll(parent => parent.PerType == (int)PermissionEnum.Model);
                foreach (var parent in parentList)
                {
                    <li class="treeview">
                        <a href="#">
                            <i class="@parent.CssClass"></i> <span>@parent.Name</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        @{
                            <!--获取模块下的所有菜单-->
                            var sonList = Model.ToList().FindAll(ls => ls.ParentCode == parent.SysCode && ls.PerType == (int)PermissionEnum.Menu);
                            if (sonList.Count > 0)
                            {
                        <ul class="treeview-menu">
                            @{ foreach (var son in sonList)
                                {
                                    <li><a href="javascript:void(0)" class="myLeftMenu" data="@son.Route"><i class="@son.CssClass"></i>@son.Name</a></li>
                                }
                            }
                        </ul>
                            }
                        }
                    </li>
                }
            }

        </ul>
        <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>
